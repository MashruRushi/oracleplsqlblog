@section scripts{
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script>
        $(document).ready(function () {
            $('p').addClass('shortDescription');
            $('.FirstPNode p').prepend('<span class="glyphicon glyphicon-star" style="color:red; margin-right:5px;"></span>');
            $('.detail').hide();
            $('.cls').hide();
            $('.more').click(function () {
                $(this).focus();
                var x = $(this).attr('data-id');
                $('#' + x).show("slow");
                $(this).closest("div").hide();
                $(this).closest("div").prev("div").show();
            });
            $('.closes').click(function () {
                $(this).focus();
                var x = $(this).attr('data-id');
                $('#' + x).hide("slow");
                $(this).closest("div").hide();
                $(this).closest("div").next("div").show();
            });
        });
    </script>
}