@using System.Configuration;
@{ 
    var version = ConfigurationManager.AppSettings["StaticVersion"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="@(ViewBag.Description ?? "Its all about oracle pl/sql.Contains youtube videos, tips and tricks, tutorials and blogs")">
    <meta name="keywords" content="@(ViewBag.Keywords ?? "Plsql,PL/SQL,Blog,YouTube Videos,Oracle,Oracle 10g,Oracle plsql,Oracle pl/sql interview question,Oracle Tips and Tricks,Kishan Mashru,pl/sql syntax")">
    <meta name="author" content="Kishan Mashru">
    <link rel="icon" type="image/png" href="~/Images/KMIcon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*@System.Web.Optimization.Styles.Render("~/Content/css")
        @System.Web.Optimization.Scripts.Render("~/bundles/modernizr")*@
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-100432676-1', 'auto');
        ga('send', 'pageview');

    </script>
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({
            google_ad_client: "ca-pub-5862943718087800",
            enable_page_level_ads: true
        });
    </script>

</head>
<body>
    <nav class="navbar navbar-default hidden-sm hidden-xs" style="background-color:#EC1C24; color:white !important; margin-bottom:0px;">
        <div class="container-fluid" style="">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="collapse-1" style="margin-left:4%;">
                <ul class="nav navbar-nav upperTab">
                    <li style="font-size:18px; padding-right:10px;"><i class="glyphicon glyphicon-th-large" style="top:27px"></i>@Html.ActionLink(" Oracle Tutorials", "OracleTutorialsIndex", "OracleTutorials", null, new { @class = "clr navAdjustment", @title = "Pracle Tutorials" })</li>
                    <li style="font-size:18px; padding-right:10px;"><i class="glyphicon glyphicon-star" style="top:27px"></i>@Html.ActionLink(" Oracle Tips & Tricks", "TipsNTrickIndex", "TipsNTrick", null, new { @class = "clr navAdjustment", @title = "Oracle Tips & Tricks" })</li>
                    @*<li style="font-size:18px; padding-right:10px;"><i class="glyphicon glyphicon-pencil" style="top:27px"></i>@Html.ActionLink(" Oracle Interview Questions", "InterviewQuestionIndex", "InterviewQuestion", null, new { @class = "clr navAdjustment", @title = "Oracle Interview Questions" })</li>*@
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="row hidden-xs" style="height:120px; margin-top:16px; padding-left:5%; max-width: 400px;">
        <div class="col-lg-12">
            <span class="pull-left logo">
                <a href="@Url.Action("AboutMeIndex","AboutMe")" style="color:black">
                    <img src="~/Images/Logo.png" alt="KishanMashru's Blog" title="Logo" />
                </a>
            </span>
        </div>
    </div>

    <nav class="navbar navbar-inverse hidden-sm hidden-xs" style="border-radius:0px;">
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div>
            <ul class="nav navbar-nav pull-right lowerTabsClr" style="color:white; margin-right:5%;">
                <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-home" style="top:24px"></i>@Html.ActionLink(" HOME", "Index", "MyHome", null, new { @class = "clr", @title = "Home" })</li>
                <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-file" style="top:24px"></i>@Html.ActionLink(" BLOGS", "BlogIndex", "BlogDisplay", null, new { @class = "clr", @title = "Blogs" })</li>
                <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-hd-video" style="top:24px"></i>@Html.ActionLink(" YOUTUBE VIDEOS", "YouTubeVideoGridIndex", "YouTubeVideoGrid", null, new { @class = "clr", @title = "YouTube Videos" })</li>
                <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-user" style="top:24px"></i>@Html.ActionLink(" ABOUT ME", "AboutMeIndex", "AboutMe", null, new { @class = "clr", @title = "About Me" })</li>
                @*<li class="dropdown">
                        <a class="dropdown-toggle clr navAdjustment" title="Setting"
                           data-toggle="dropdown"
                           href="javascript:void(0)" style="font-size:16px; top:24px; margin-left:-13px;"><i class="fa fa-cog" style="font-size:16px; padding-right:5px; color:red;"></i>SETTING<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li style="font-size:14px; padding-right:10px;">@Html.ActionLink(" UPDATE PROFILE", "UpdateProfile", "UpdateProfile", null, new { @class = "redClr fa fa-user", @title = "Update Profile" })</li>
                            <li style="font-size:14px; padding-right:10px;">@Html.ActionLink(" CHANGE PASSWORD", "ChangePassword", "ChangePassword", null, new { @class = "redClr fa fa-pencil", @title = "Change Password" })</li>
                        </ul>
                    </li>*@

                @*@if (Session["Email"] != null && Session["Email"].ToString() != string.Empty)
                    {
                        <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-log-out" style="top:24px"></i>@Html.ActionLink(" SIGNOUT", "Login", "Login", null, new { @class = "clr", @title = "Sign out" })</li>
                    }
                    else
                    {
                        <li style="font-size:16px; padding-right:5px;"><i class="glyphicon glyphicon-log-in" style="top:24px"></i>@Html.ActionLink(" LOGIN", "Login", "Login", null, new { @class = "clr", @title = "Login" })</li>
                    }*@

            </ul>
        </div><!-- /.navbar-collapse -->
    </nav>

    <div class="container">
        @RenderBody()
    </div>
    <footer class="ftr hidden-xs">
        <center><strong><p style="font-family:Calibri;">Copyright &copy; @DateTime.Now.Year Kishan Mashru's Blog. All rights reserved</p></strong></center>
    </footer>
    @*@System.Web.Optimization.Scripts.Render("~/bundles/jquery")
        @System.Web.Optimization.Scripts.Render("~/bundles/bootstrap")*@

    <script src="~/Scripts/jquery-1.10.2.min.js?v=@version"></script>
    <script src="~/Scripts/Site.js?v=@version"></script>

    @RenderSection("Scripts", required: false)

    <script src="~/Scripts/bootstrap.js?v=@version"></script>
    <script src="~/Scripts/jquery.validate.js?v=@version"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js?v=@version"></script>

</body>
</html>
