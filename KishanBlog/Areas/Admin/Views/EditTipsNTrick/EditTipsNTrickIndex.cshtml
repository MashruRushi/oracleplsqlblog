@model KishanBlog.Models.TipsNTricks
@using System.Data;

@{
    ViewBag.Title = "Edit Tips & Trick Index";
    var TipsNTrickList = ViewBag.TipsNTrickList;
}
<link href="https://cdn.datatables.net/1.10.13/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>  






<div class="block">
    <div class="row" style="margin-bottom:30px;">
        <div class="col-md-12">
            <h1>Edit Tips & Trick</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover" id="datatable">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th style="width:60%;">Title</th>
                        <th>Published On</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dr in TipsNTrickList.Rows)
                    {
                        <tr>
                            <td>@dr["TipsNTrickId"]</td>
                            <td><a href="@Url.Action("AdminTipsNTrickIndex","AdminTipsNTrick",new {Id=dr["TipsNTrickId"] })">@Html.Raw(dr["TipsNTrickTitle"])</a></td>
                            <td>@dr["PublishOn"]</td>
                            <td>
                                <a href="@Url.Action("AdminTipsNTrickIndex","AdminTipsNTrick",new {Id=dr["TipsNTrickId"] })" style="margin-right:5px;"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                                @if (!Convert.ToBoolean(dr["IsDelete"]))
                                {
                                    <a href="@Url.Action("DeleteTipsNTrick","EditTipsNTrick",new {Id=dr["TipsNTrickId"] })"><span class="glyphicon glyphicon-remove"></span> Delete</a>
                                }
                                else
                                {
                                    <span style="color:red;"><b>Deleted</b></span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.13/js/dataTables.bootstrap.min.js"></script>

}

